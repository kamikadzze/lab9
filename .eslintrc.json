{
  "env": {
    "node": true,
    "jest": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:jest/recommended"
  ],
  "plugins": [
    "jest"
  ],
  "parserOptions": {
    "ecmaVersion": 2020
  },
  "rules": {
    "@typescript-eslint/no-require-imports": "off",
    "no-undef": "off"
  },
  "globals": {
    "test": "readonly",
    "expect": "readonly"
  }
}
